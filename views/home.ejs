<link rel="stylesheet" href="<%= assetPath("/css/home.css") %>">


<div id="home-container">
	<section id="feed-posts">
		<h3>Posts</h3>
		<% if (locals.user) {%>
			<form action="/posts/create" id="new-posts" method="POST">
				<textarea id="post_content" name="content" cols="30" rows="3" placeholder="Type Here..." required></textarea>
				<input type="submit" id="post-button" value="POST">
			</form>
		<% } %>
		<div id="display-post">
			<ul>
				<% for (post of posts){ %>
					
					<%- include("_post") -%>
					
				<%}%>
			</ul>
		</div>
	</section>

	<section id="user-friends">
		<h4>Friends</h4>
		<% for (u of all_users) { %>
			<p>
				<a href="/users/profile/<%= u.id %>"><%= u.name %></a>
			</p>
		<% } %>
	</section>
</div>

<script src="<%= assetPath("js/home_posts.js") %>"></script>
